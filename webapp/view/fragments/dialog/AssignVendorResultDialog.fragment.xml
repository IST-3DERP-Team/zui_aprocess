<core:FragmentDefinition
		xmlns="sap.m"
        xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
        xmlns:uit="sap.ui.table"
        id="fragment-1" 
        fragmentName="fragment1">
    <Dialog contentWidth="1000px"
        contentHeight="300px"
        title="Assign Vendor Result"
        resizable="true"
        draggable="true">
        <endButton>
			<Button text="Close" press=".onAssignVendorClose"/>
		</endButton>
        <uit:Table id="assignVendorResultTab"
            rows="{/items}"
            selectionMode="None"
            visibleRowCount="{/rowCount}"
            paste="onPaste">
            <uit:columns>
                <uit:Column width="7rem">
                    <Label text="PR#" />
                    <uit:template>
                        <Text text="{PRNUMBER}" wrapping="false" />
                    </uit:template>
                </uit:Column>                
                <uit:Column width="5rem">
                    <Label text="PR Item" />
                    <uit:template>
                        <Text text="{PRITEMNO}" wrapping="false" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="20rem">
                    <Label text="Remarks" />
                    <uit:template>
                        <Text text="{REMARKS}" wrapping="false" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="10rem">
                    <Label text="Material No." />
                    <uit:template>
                        <Text text="{MATERIALNO}" wrapping="false" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="7rem">
                    <Label text="IO No." />
                    <uit:template>
                        <Text text="{IONUMBER}" wrapping="false" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="4rem">
                    <Label text="Qty" />
                    <uit:template>
                        <Text text="{QTY}" wrapping="false" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="5rem">
                    <Label text="UOM" />
                    <uit:template>
                        <Text text="{UNIT}" wrapping="false" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="7rem">
                    <Label text="Vendor" />
                    <uit:template>
                        <Text text="{VENDOR}" wrapping="false" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="7rem">
                    <Label text="Purch Org" />
                    <uit:template>
                        <Text text="{PURCHORG}" wrapping="false" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="7rem">
                    <Label text="Purch Plant" />
                    <uit:template>
                        <Text text="{PURCHPLANT}" wrapping="false" />
                    </uit:template>
                </uit:Column>
                <uit:Column width="7rem">
                    <Label text="Purch Group" />
                    <uit:template>
                        <Text text="{PURCHGRP}" wrapping="false" />
                    </uit:template>
                </uit:Column>
            </uit:columns>
        </uit:Table>    
    </Dialog>
</core:FragmentDefinition>
