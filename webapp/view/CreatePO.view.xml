                                        </form:fields>
                                    </form:FormElement>
                                    <form:FormElement label="{ddtext>/SHIPTOPLANT}">
                                        <form:fields>
                                            <Text text="{grpheader>/0/SHIPTOPLANTDESC}" />
                                        </form:fields>
                                    </form:FormElement>
                                    <form:FormElement label="{ddtext>/EXRATE}">
