                                        </form:fields>
                                    </form:FormElement>
                                    <form:FormElement label="{ddtext>/PURCHGRP}">
                                        <form:fields>
                                            <Text text="{grpheader>/0/PURCHGRPDESC}" />
                                        </form:fields>
                                    </form:FormElement>                                
