<mvc:View controllerName="zuiaprocess.controller.CreatePO"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core"
    xmlns:uiL="sap.ui.layout"
    xmlns:uiT="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:semantic="sap.m.semantic"
    height="100%"
    displayBlock="true">
    <Page showHeader="false" title="{ddtext>/POCREATE}" showNavButton="true" navButtonPress="onNavBack">
        <dependents>
            <core:CommandExecution id="CE_CANCELALL" command="CancelAll" enabled="true" execute=".onCancelAllPO" />
            <core:CommandExecution id="CE_CANCEL" command="Cancel" enabled="true" execute=".onCancelPO" />
        </dependents>
        <content>
            <VBox fitContainer="true" class="genpo"> 
                <Panel class="sapUiNoContentPadding hdrFormBgColor">
                    <OverflowToolbar>
                        <Title id="titlePOCreate" level="H3" text="{ddtext>/POCREATE}" class="sapUiTinyMarginBegin createPOTitle cursorPointer" tooltip="Click to view group status" />
                        <Button id="btnPrevPO" 
                            type="Transparent"
                            icon="sap-icon://slim-arrow-left"
                            press="onPrevPO"
                            tooltip="{ddtext>/PREVIOUS}"
                            visible="true"/>
                        <tnt:InfoLabel text="{ui>/activeGroup} of {ui>/totalGroup}"/>
                        <Button id="btnNextPO" 
                            type="Transparent"
                            icon="sap-icon://slim-arrow-right"
                            press="onNextPO"
                            tooltip="{ddtext>/NEXT}"
                            visible="true"/>
                        <ToolbarSpacer/>
                        <Button id="btnUpdDate" 
                            text="{ddtext>/CHANGEDELVDATE}"
                            icon="sap-icon://calendar"
                            press="onUpdDate"
                            tooltip="{ddtext>/CHANGEDELVDATE}"
                            visible="true"/>
                        <Button id="btnFabSpecs" 
                            text="{ddtext>/FABSPECS}"
                            icon="sap-icon://list"
                            press="onFabSpecs"
                            tooltip="{ddtext>/FABSPECS}"
                            visible="false"/>
                        <Button id="btnHdrTxt" 
                            text="{ddtext>/HEADERTEXT}"
                            icon="sap-icon://header"
                            press="onHdrText"
                            tooltip="{ddtext>/HEADERTEXT}"
                            visible="true"/>
                        <Button id="btnGenPO" 
                            text="{ddtext>/GENERATEPO}"
                            icon="sap-icon://add-document"
                            press="onValidateExtendPO"
                            tooltip="{ddtext>/GENERATEPO}"
                            visible="true"/>
                        <Button id="btnCancelAllPO"
                            text="{ddtext>/CANCELALL}"
                            icon="sap-icon://sys-cancel"
                            press="onCancelAllPO"
                            tooltip="{ddtext>/CANCELALL}"
                            visible="true"/>                            
                        <Button id="btnCancelPO"
                            icon="sap-icon://sys-cancel"
                            press="onCancelPO"
                            tooltip="{ddtext>/CANCEL}"
                            visible="true"/>                         
                    </OverflowToolbar>

                    <form:Form id="headerForm" editable="true" class="sapUiNoContentPadding" busy="false">
                        <form:layout>
